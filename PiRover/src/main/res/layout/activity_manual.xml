<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.piroverapp.ManualActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/background3">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PiRover"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/forwardButton"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginTop="74dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/uparrow"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/reverseButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/downarrow"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/forwardButton"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/forwardButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/forwardButton"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/rightButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/reverseButton"
        app:layout_constraintLeft_toRightOf="@+id/forwardButton"
        app:layout_constraintTop_toTopOf="@+id/forwardButton"
        app:srcCompat="@drawable/rightarrow"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="28dp"
        app:layout_constraintVertical_bias="0.315"
        android:layout_marginStart="27dp" />

    <ImageView
        android:id="@+id/leftButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/reverseButton"
        app:layout_constraintRight_toLeftOf="@+id/forwardButton"
        app:layout_constraintTop_toTopOf="@+id/forwardButton"
        app:srcCompat="@drawable/leftarrow"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="26dp"
        app:layout_constraintVertical_bias="0.315"
        android:layout_marginEnd="26dp" />

    <Button
        android:id="@+id/buttonBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/connect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reverseButton"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.26" />

    <Button
        android:id="@+id/buttonDc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/disconnect"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonBlue"
        app:layout_constraintLeft_toRightOf="@+id/buttonBlue"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="34dp" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="12dp"
        android:text="@string/stop"
        app:layout_constraintBottom_toTopOf="@+id/reverseButton"
        app:layout_constraintLeft_toRightOf="@+id/leftButton"
        app:layout_constraintTop_toTopOf="@+id/rightButton"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
